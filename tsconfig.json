{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~app_contexts/*": ["./src/contexts/*"],
      "~app_tools/*": ["./src/tools/*"],
      "~app_app/*": ["./src/app/(app)/*"],
      "~app_assets/*": ["./assets/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "./src/**/*",
    "src/**/*",
    "src/**/*.*"
  ],
  "exclude": ["node_modules", "babel.config.js"]
}
